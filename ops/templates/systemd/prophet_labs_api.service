[Unit]
Description=Prophet Labs API service
After=network.target

[Service]
EnvironmentFile=/path/to/prophet-labs/.env
WorkingDirectory=/path/to/prophet-labs
ExecStart=/path/to/prophet-labs/.venv/bin/uvicorn prophet_labs.ui.api:app --host ${API_HOST:-0.0.0.0} --port ${API_PORT:-8000} --workers ${RECOMMENDED_API_WORKERS:-2}
Restart=on-failure
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target
